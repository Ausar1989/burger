<div class="container">
    
<div class="jumbotron">
  <h1 class="display-4">The Best Burgers Ever.</h1>
  <p class="lead">At this place, only the best burgers are made.</p>
  <br>
  <h2>Make your Burger</h2>
  <panel>
      <form class="create-form">
          <div class="form-group">
              <label for="newBurger">Order New Burger</label>
              <input type="text" id="newBurger" name="burger">
              <button type="submit" class="btn btn-success" id="addburger">
                  <span class="fa fa-thumbs-up"></span>
              </button>
          </div>
      </form>
  </panel>
</div>
<div class="row">
   <div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong>Order Your Burgers</strong></div>
        <div class="panel-body">
            
            <ul>
                {{#each burgers}}
                  {{#unless devoured}}
                  <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                  <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" 
                  data-newDevoured={{devour}}><span class="fa fa-usd"></span></button>
                  {{/unless}}
                {{/each}}
            </ul>

        </div>
    </div>
  </div>
</div>
<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading" id="rightside"><strong>Devour the Burgers</strong></div>
        <div class="panel-body">
            
            <ul>
                {{#each burgers}}
                  {{#if devoured}}
                  <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                  <button type="button" class="eatburger btn btn-dnager" id="trashbutton" data-id="{{this.id}}" 
                  data-newDevoured={{devour}}><span class="fa fa-usd"></span></button>
                  {{/if}}
                {{/each}}
            </ul>

        </div>
       </div>
     </div>
   </div>
<!--endrow-->
</div>
<!--endContainer-->